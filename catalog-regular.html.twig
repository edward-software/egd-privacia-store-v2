{% extends 'public/base_public.html.twig' %}
{% block title %} Privacia - Catalogue{% endblock %}
{% block breadcrumb_title %}
    {{ 'Public.Catalog.BreadcrumbTitle'| trans({}, "messages", locale) }}
{% endblock %}

{% block breadcrumb_content %}
    {{ 'Public.Catalog.BreadcrumbContent'| trans({}, "messages", locale) }}
{% endblock %}
{% block main_content %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'Public.Catalog.Title'| trans({}, "messages", locale) }}
                    </h1>
                    <div class="divider"></div>
                </div>
            </div>
            {% set customArea = paprec_customizable_area('catalog_top', locale) %}
            {% if customArea is not null %}
                <div class="row m-b-40">
                    <div class="col-xl-6">
                        <div class="mytext">{% autoescape false %}{{ customArea.leftContent }}{% endautoescape %}</div>
                        <div class="image">
                            {% if customArea.leftPictures and customArea.leftPictures|length > 0 %}
                                <img src="{{ asset('uploads/pictos/' ~ customArea.leftPictures[0].path) }}"
                                     class="img-fluid"
                                     alt="Image block left">
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="mytext">{% autoescape false %}{{ customArea.rightContent }}{% endautoescape %}</div>
                        <div class="image">
                            {% if customArea.rightPictures and customArea.rightPictures|length > 0 %}
                                <img src="{{ asset('uploads/pictos/' ~ customArea.rightPictures[0].path) }}"
                                     alt="Image block left">
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <hr class="m-b-40">

            {% for range in ranges %}
                <div class="range-container">
                    <h2><a data-toggle="collapse"
                           href="#rangeProductCollapse__{{ range.id }}">{{ range|rangeLabelTranslation(locale) }}</a>
                    </h2>
                    <div id="rangeContentContainer__{{ range.id }}">
                        <div class="row m-b-15 m-t-1">
                            <div class="col-md-1 range__image">
                                <img src="{% if range.pictures|length > 0 %}{{ asset('/uploads/pictos/' ~ range.pictures[0].path) }}{% endif %}"
                                     alt="#" class="">
                            </div>
                            <div class="col-md-11">
                                <p>{{ range|rangeLabelTranslation(locale,'shortDescription') }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row product-container collapse multi-collapse"
                         id="rangeProductCollapse__{{ range.id }}">
                        {% for product in range.products %}
                            <div class="col-md-4 product" id="productContainer_{{ product.id }}">
                                <div class="row product__block">
                                    <div class="col-xl-3 paprec-flex align-items_center">
                                        <div class="product__image">
                                            <img src="{% if product.pilotPictures|length > 0 %}{{ asset('/uploads/pictos/' ~ product.pilotPictures[0].path) }}{% endif %}"
                                                 alt="#" class="">
                                        </div>
                                    </div>
                                    <div class="col-xl-9">
                                        <div class="product__title">
                                            <h2 class="color-secondary m-b-20">{{ product|productLabelTranslation(locale) }}</h2>
                                        </div>
                                        <div class="product__description">
                                            <div class="paprec-flex space-between">
                                                <div class="m-b-12">{{ product|productLabelTranslation(locale,'shortDescription') }}</div>
                                            </div>
                                            <div class="paprec-flex space-between">
                                                <div class="product__label">{{ 'Catalog.Product.Capacity'|trans({}, "messages", app.request.locale) }}
                                                    :
                                                </div>
                                                <div class="product__value">{{ product.capacity }} {{ product.capacityUnit }}</div>
                                            </div>
                                            <div class="paprec-flex space-between">
                                                <div class="product__label">{{ 'Catalog.Product.Dimensions'|trans({}, "messages", app.request.locale) }}
                                                    :
                                                </div>
                                                <div class="product__value">{{ product.dimensions }}</div>
                                            </div>
                                        </div>
                                        <div class="product__quantity paprec-flex">
                                            <div>{{ 'Public.Catalog.Quantity'| trans({}, "messages", locale) }} :</div>
                                            <div class="paprec-flex product__quantity__container">
                                                {% set qtty = '' %}
                                                {% for item in cart.content %}
                                                    {% if item['pId'] == product.id %}
                                                        {% set qtty = item['qtty'] %}
                                                    {% endif %}
                                                {% endfor %}
                                                <div class="paprec-flex">
                                                    <button class="removeOneToCartButton round-btn round-btn--blue mr-2 {% if qtty == 0 %}round-btn--disable{% endif %}"
                                                            id="removeOneToCartButton{{ product.id }}"
                                                            data-url="{{ path('paprec_public_catalog_removeOneContent', {locale: locale, cartUuid: cart.id, productId: product.id}) }}">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <select name=""
                                                            disabled="disabled"
                                                            class="quantityProductSelect"
                                                            data-url="{{ path('paprec_public_catalog_addContent', {locale: locale, cartUuid: cart.id}) }}"
                                                            data-product="{{ product.id }}"
                                                            id="quantityProductSelect_{{ product.id }}">
                                                        {% for i in 0..100 %}
                                                            {% if i == qtty %}
                                                                <option value="{{ i }}"
                                                                        selected="selected">{{ i }}</option>
                                                            {% else %}
                                                                <option value="{{ i }}">{{ i }}</option>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </select>
                                                    <button class="addOneToCartButton round-btn round-btn--blue ml-2"
                                                            id="addOneToCartButton{{ product.id }}"
                                                            data-url="{{ path('paprec_public_catalog_addOneContent', {locale: locale, cartUuid: cart.id, productId: product.id}) }}">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="product__frequency paprec-flex">
                                            <div class="no-wrap">{{ 'Public.Catalog.Frequency'| trans({}, "messages", locale) }}
                                                :
                                            </div>
                                            <div class="paprec-flex product__frequency__container">
                                                {% set frequency = '' %}
                                                {% set frequencyTimes = '0' %}
                                                {% set frequencyInterval = '' %}
                                                {% for item in cart.content %}
                                                    {% if item['pId'] == product.id %}
                                                        {% set frequency = item['frequency'] %}
                                                        {% set frequencyTimes = item['frequencyTimes'] %}
                                                        {% set frequencyInterval = item['frequencyInterval'] %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% if not frequency %}
                                                    {% set frequency = product.frequency %}
                                                {% endif %}
                                                {% if frequency and frequency == 'regular' %}
                                                    {% if not frequencyTimes %}
                                                        {% set frequencyTimes = product.frequencyTimes %}
                                                    {% endif %}
                                                    {% if not frequencyInterval %}
                                                        {% set frequencyInterval = product.frequencyInterval %}
                                                    {% endif %}
                                                {% elseif frequency and frequency == 'unknown' %}
                                                    {% set frequencyTimes = null %}
                                                    {% set frequencyInterval = null %}
                                                {% endif %}
                                                <!-- Group of default radios - option Regular-->
                                                <div class="paprec-flex">
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" class="custom-control-input"
                                                               id="regularFrequencyButton__{{ product.id }}"
                                                               value="regular"
                                                               data-url="{{ path('paprec_public_catalog_editProductFrequency', {locale: locale, cartUuid: cart.id, productId: product.id}) }}"
                                                               {% if frequency == 'regular' %}checked{% endif %}
                                                               name="productFrequencyRadios__{{ product.id }}">
                                                        <label class="custom-control-label"
                                                               for="regularFrequencyButton__{{ product.id }}">{{ 'Public.Catalog.Regular'| trans({}, "messages", locale) }}</label>
                                                    </div>

                                                </div>

                                                <!-- Group of default radios - option Unknown -->
                                                <div class="custom-control custom-radio">
                                                    <input type="radio" class="custom-control-input"
                                                           id="unknownFrequencyButton__{{ product.id }}"
                                                           value="unknown"
                                                           data-url="{{ path('paprec_public_catalog_editProductFrequency', {locale: locale, cartUuid: cart.id, productId: product.id}) }}"
                                                           {% if frequency == 'unknown' %}checked{% endif %}
                                                           name="productFrequencyRadios__{{ product.id }}">
                                                    <label class="custom-control-label"
                                                           for="unknownFrequencyButton__{{ product.id }}">{{ 'Public.Catalog.Unknown'| trans({}, "messages", locale) }}
                                                    </label>
                                                </div>


                                            </div>
                                        </div>

                                        <div class="paprec-flex">
                                            <input class="product__frequency__container__input text-center mr-2"
                                                   size="1"
                                                   type="number"
                                                   max="9"
                                                   min="0"
                                                   {% if frequency != 'regular' %}hidden{% endif %}
                                                   data-url="{{ path('paprec_public_catalog_editProductFrequency', {locale: locale, cartUuid: cart.id, productId: product.id}) }}"
                                                   id="productFrequencyTimesInput__{{ product.id }}"
                                                   value="{{ frequencyTimes }}"/>
                                            <span class="devis__frequence__times no-wrap"
                                                  id="textFrequencyTimes__{{ product.id }}"
                                                  {% if frequency != 'regular' %}hidden{% endif %}>{{ 'Public.Catalog.Times'| trans({}, "messages", locale) }}</span>
                                            <select class="catalog-frequency-select ml-2"
                                                    {% if frequency != 'regular' %}hidden{% endif %}
                                                    data-url="{{ path('paprec_public_catalog_editProductFrequency', {locale: locale, cartUuid: cart.id, productId: product.id}) }}"
                                                    id="productFrequencyIntervalSelect__{{ product.id }}">
                                                <option value="week"
                                                        {% if frequencyInterval == 'week' %}selected{% endif %}>
                                                    {{ 'Public.Catalog.Week'| trans({}, "messages", locale) }}
                                                </option>
                                                <option value="month"
                                                        {% if frequencyInterval == 'month' %}selected{% endif %}>
                                                    {{ 'Public.Catalog.Month'| trans({}, "messages", locale) }}
                                                </option>
                                                <option value="bimestre"
                                                        {% if frequencyInterval == 'bimestre' %}selected{% endif %}>
                                                    {{ 'Public.Catalog.Bimestre'| trans({}, "messages", locale) }}
                                                </option>
                                                <option value="quarter"
                                                        {% if frequencyInterval == 'quarter' %}selected{% endif %}>
                                                    {{ 'Public.Catalog.Quarter'| trans({}, "messages", locale) }}
                                                </option>
                                            </select>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
            <div class="row product-container">
                <div class="col-md-6 product">
                    <div class="row devis">
                        <div class="col-xl-7 p-20">
                            <div class="devis__products-container">
                                <h2 class="m-b-20">{{ 'Public.Catalog.Quote'| trans({}, "messages", locale) }}</h2>
                                <div class="devis__recap devis-recap">
                                    {% for range in ranges %}
                                        {% for product in range.products %}
                                            {% for item in cart.content %}
                                                {% if item['pId'] == product.id %}
