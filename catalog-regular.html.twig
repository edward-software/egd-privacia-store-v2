                                                        <p>{{ product|productLabelTranslation(locale) }}</p>
                                                        <p class="mr-2 ml-2">|</p>
                                                        <p class="mr-1">{{ ('Public.Catalog.' ~ (item['frequency']|capitalize))|trans({}, "messages", locale)|capitalize }}</p>
                                                        {% if item['frequency'] == 'regular' %}
                                                            <p>{{ item['frequencyTimes'] }} {{ 'Public.Catalog.Times'| trans({}, "messages", locale) }} {{ ('Public.Catalog.' ~ item['frequencyInterval']|capitalize)| trans({}, "messages", locale) }}</p>

                                                        {% endif %}
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                        <div class="col-xl-5 devis__frequency-container p-20 passedMe">
