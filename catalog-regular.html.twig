{% block javascripts %}
    <script>
        $(function () {
            $('.progress-bar').css('width', '38%').attr('aria-valuenow', '35%');

            $(window).scroll(function () {
                var Bottom = $(window).height() + $(window).scrollTop() >= $(document).height();
                if (Bottom) {
                    $('.showHide').fadeOut();
                } else {
                    $('.showHide').fadeIn();
                }
            });

        });

    </script>
