{% extends 'base_public.html.twig' %}
{% block title %} Privacia - Confirmation{% endblock %}

{% block main_content %}
    <section class="page-section confirmation">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-xs-12">
                    <div class="row">
                        <div class="col-12">
                            <h1>
                                {{ 'Public.Confirm.Title'| trans({}, "messages", locale) }}
                            </h1>
                            <div class="divider"></div>
                        </div>
                        <div class="col-12">
                            {{ 'Public.Confirm.Message'| trans({}, "messages", locale) }}<a
                                    href="mailto:{{ paprec_public_technical_service }}"> {{ 'Public.Confirm.TechnicalService'| trans({}, "messages", locale) }}</a>.
                        </div>
                    </div>
                </div>
                <div class="d-none d-lg-block col-lg-6 text-center">
                    <img src="{{ asset('build/static/paperplane.png') }}" alt="">
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('.progress-bar').css('width', '100%').attr('aria-valuenow', '100%');
        });

    </script>
{% endblock %}

